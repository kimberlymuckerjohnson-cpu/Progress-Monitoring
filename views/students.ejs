
         <h1>Students</h1>

<form method="post" action="/students/add" class="mb-2">
  <h3>Add Student</h3>
  <div class="flex gap-2">
    <div style="flex:1">
      <label>First Name</label><br />
      <input type="text" name="firstName" required />
    </div>
    <div style="flex:1">
      <label>Last Name</label><br />
      <input type="text" name="lastName" required />
    </div>
    <div style="flex:1">
      <label>Grade Level</label><br />
      <input type="text" name="gradeLevel" placeholder="e.g., 2nd" required />
    </div>
  </div>
  <button type="submit" class="btn-primary mt-1">Save Student</button>
</form>

<% if (!students || students.length === 0) { %>
  <p>You donâ€™t have any students yet. Add your first student to start tracking goals and assessments.</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Student Name</th>
        <th>Grade</th>
        <th># of Goals</th>
        <th>Last Assessment Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(function(s) { %>
        <tr>
          <td>
            <a href="/students/<%= s.id %>">
              <%= s.firstName %> <%= s.lastName %>
            </a>
          </td>
          <td><%= s.gradeLevel %></td>
          <td><%= s.goalCount %></td>
          <td><%= s.lastAssessmentDate || 'No Data' %></td>
          <td>
            <form method="post" action="/students/<%= s.id %>/delete" onsubmit="return confirm('Delete this student and all data?');">
              <button type="submit" class="btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>
